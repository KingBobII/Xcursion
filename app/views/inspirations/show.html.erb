<div class="container-suggestions my-5">
  <h1 class="text-center mb-5">AI SUGGESTED EXCURSIONS</h1>

  <div class="suggestions-container-lower">
    <div class="container-suggestions-info">
      <% @suggestions_array.each do |suggestion| %>
        <div class="ai-suggestions">
            <p><%= suggestion %></p>
        </div>
      <% end %>
    </div>

    <div class="container-new-excursion">
      <%# <h1>Create An Inspired Excursion</h1> %>
      <%= simple_form_for @excursion do |form| %>
        <%= form.input :title, placeholder: 'Enter the title' %>
        <%= form.input :city, placeholder: 'Enter the city' %>
        <%= form.input :capacity, placeholder: 'Enter the capacity' %>
        <%= form.input :duration, placeholder: 'Enter the length' %>
        <%= form.input :description, placeholder: 'Enter the description' %>
        <%= form.input :setting, collection: ['Family', 'Friends', 'Business', 'Romantic'], prompt: 'Select a setting', placeholder: 'Select a setting' %>
        <%= form.input :category, prompt: 'Describe the vibe', placeholder: 'Describe the vibe' %>
        <%= form.button :submit, class: 'btn btn-info text-center mt-3'  %>
      <% end %>
    </div>
  </div>

</div>
