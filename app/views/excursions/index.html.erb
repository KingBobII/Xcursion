<div class="container my-4 pretty-searchbar" data-controller="search-excursions">

  <%= form_with url: excursions_path, method: :get, html: {class: "mb-4", data: {search_excursions_target: "form"}} do |f|%>
  <div class="pretty-searchbar">
    <%= f.text_field :query,
                    placeholder: 'Search for excursions...',
                    class: "form-control search-input",
                    value: params[:query],
                    data: {search_excursions_target: "input",
                          action: "keyup->search-excursions#update"}
                    %>
    <button type="submit" class="btn btn-primary pretty-search-btn" data-action="submit->search-excursions#search">
      <i class="fa-solid fa-magnifying-glass"></i>
    </button>
  </div>
<% end %>



