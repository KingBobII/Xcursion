<div class="container">
<h1>My Itineraries</h1>
<% if @itineraries.any? %>
  <div class="row">
    <% @itineraries.each do |itinerary| %>
      <div class="col-md-6 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= itinerary.title %></h5>
            <p class="card-text"><%= itinerary.start_time %> - <%= itinerary.end_time %></p>
            <p class="card-text"><%= itinerary.description %></p>
            <ul class="list-group">
              <% itinerary.excursions.each do |excursion| %>
                <li class="list-group-item">
                  <%= excursion.title %>
                   <% if excursion.image.present? %>
                    <%= cl_image_tag excursion.image.key,class: "image-of-excursion", alt: "Image of an Excursion", height: 200, width: 300, crop: :fill  %>
                  <% else %>
                    <%= image_tag "https://www.xcursionrisk.com/uploads/1/0/4/5/10451400/xcursion-green-dot.png" %>
                  <% end %>
                </li>
              <% end %>
            </ul>

          </div>
          <div class="d-flex justify-content-center mb-3">
  <%= link_to 'View', itinerary_path(itinerary), class: "btn btn-primary btn-sm", style: "width: 100px; margin-bottom: 10px;" %>
</div>

        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No itineraries found.</p>
<% end %>
<div class="d-flex justify-content-start mb-3">
  <%= link_to 'Back', root_path, class: "btn btn-info mr-2" %>
</div>
<div class="d-flex justify-content-start mb-3">
<%= link_to 'Create an Itinerary', new_itinerary_path, class: "btn btn-primary" %>
</div>



</div>
